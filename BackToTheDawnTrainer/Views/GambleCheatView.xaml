<UserControl x:Class="BackToTheDawnTrainer.Views.GambleCheatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:local="clr-namespace:BackToTheDawnTrainer"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:BackToTheDawnTrainer.ViewModels"
             d:Background="White"
             d:DataContext="{d:DesignInstance Type=vm:GambleCheatViewModel}"
             d:DesignHeight="200"
             d:DesignWidth="800"
             lex:LocalizeDictionary.DesignCulture="zh-CN"
             lex:ResxLocalizationProvider.DefaultAssembly="BackToTheDawnTrainer"
             lex:ResxLocalizationProvider.DefaultDictionary="Lang"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    MaxHeight="400"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Label MinWidth="60"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Content="{lex:Loc MainWindow_TabGamble_LabelPlayer1_Content}" />
            <ContentControl x:Name="_contentControl1" Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    MaxHeight="400"
                    Margin="0,0,0,5"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Label MinWidth="60"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Content="{lex:Loc MainWindow_TabGamble_LabelPlayer2_Content}" />
            <ContentControl x:Name="_contentControl2" Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    MaxHeight="400"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Label MinWidth="60"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Content="{lex:Loc MainWindow_TabGamble_LabelPlayer3_Content}" />
            <ContentControl x:Name="_contentControl3" Margin="5,0,0,0" />
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    MaxHeight="400"
                    Margin="0,5,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
            <Label MinWidth="60"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Content="{lex:Loc MainWindow_TabGamble_LabelPlayer4_Content}" />
            <ContentControl x:Name="_contentControl4" Margin="5,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
